# ============================================
# Docker Compose Environment Variables
# This file is used by docker-compose.yml
# Copy this file to .env in the root directory
# ============================================

# ============================================
# MySQL Database Configuration
# Used by docker-compose.yml for MySQL service
# ============================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=restaurant_db
MYSQL_USER=restaurant_user
MYSQL_PASSWORD=restaurant_password
MYSQL_PORT=3306

# ============================================
# Port Configuration for Docker Compose
# ============================================
PORT=8000
ADMIN_WEB_PORT=3001
USER_WEB_PORT=3000

# ============================================
# Notes:
# ============================================
# 1. Each service has its own .env file:
#    - be_restaurant/.env (for backend)
#    - admin-web/.env (for admin frontend)
#    - user-web/.env (for user frontend)
#
# 2. Copy .env.example files in each directory:
#    - cp be_restaurant/.env.example be_restaurant/.env
#    - cp admin-web/.env.example admin-web/.env
#    - cp user-web/.env.example user-web/.env
#
# 3. Database connection in be_restaurant/.env:
#    - DB_HOST will be automatically overridden to "mysql" in docker-compose
#    - Other DB_* variables can be set in be_restaurant/.env
#
# 4. For production:
#    - Change all passwords and secrets
#    - Use strong JWT_SECRET (at least 32 characters)
#    - Update API URLs to your domain
#    - Enable SSL/TLS
