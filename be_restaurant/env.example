# ============================================
# Backend Environment Variables (be_restaurant)
# Copy this file to .env and update values
# ============================================

# Application Configuration
NODE_ENV=production
PORT=8000

# Database Configuration
# Note: DB_HOST will be overridden to "mysql" in docker-compose.yml for Docker network
DB_HOST=localhost
DB_PORT=3306
DB_NAME=restaurant_db
DB_USER=restaurant_user
DB_PASSWORD=restaurant_password

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-please-use-strong-random-string
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=*

# VNPay Configuration
VNP_TMN_CODE=
VNP_HASH_SECRET=
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNP_RETURN_URL=
CLIENT_URL=http://localhost:3000

# Debug
DEBUG_SQL=false

