{
  "name": "restaurant-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "sequelize": "sequelize-cli --config src/config/sequelize.cjs --migrations-path src/migrations --seeders-path src/seeders --models-path src/models",
    "makemigration": "node ./node_modules/sequelize-auto-migrations/bin/makemigration.js --migrations-path src/migrations --models-path dist/models",
    "migrate": "node ./node_modules/sequelize-auto-migrations/bin/runmigration.js --migrations-path src/migrations --models-path dist/models",
    "db:migrate": "npm run sequelize -- db:migrate",
    "db:migrate:undo": "npm run sequelize -- db:migrate:undo",
    "db:seed": "npm run sequelize -- db:seed:all",
    "db:seed:undo": "npm run sequelize -- db:seed:undo:all"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.3",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "sequelize-auto-migrations": "^1.0.3",
    "socket.io": "^4.7.5",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.2",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
