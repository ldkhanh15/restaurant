# Restaurant Management System - Root Environment Variables Template
# Copy this file to .env and fill in your values (for Docker Compose)

# ============================================
# Database Configuration (for Docker Compose)
# ============================================
DB_ROOT_PASSWORD=rootpassword
DB_NAME=restaurant_db
DB_USER=restaurant_user
DB_PASSWORD=restaurant_password

# ============================================
# Backend API Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================
# Cloudinary (Image Upload)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# ============================================
# VNPay Payment Gateway
# ============================================
VNPAY_TMN_CODE=your-vnpay-code
VNPAY_HASH_SECRET=your-vnpay-secret

# ============================================
# Chatbot Configuration
# ============================================
GEMINI_API_KEY=your-gemini-api-key
BE_URL=http://backend:3000/api

# ============================================
# Next.js Public Variables (for Docker)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

